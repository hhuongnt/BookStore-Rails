<%= form_with(model: book, local: true, html: { multipart: true }) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :author %><br>
    <%= form.text_field :author %>
  </div>

  <div class="field">
    <%= form.label :price %><br>
    <%= form.number_field :price %>
  </div>
  <br>

  <div class="field">
    <%= form.label :published_on %>
    <%= form.date_select :published_on %>
  </div>

  <div class="field">
    <%= form.file_field :photos, multiple: true, accept: "image/jpeg, image/gif, image/png, image/jpg" %>
  </div>
  <br>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
