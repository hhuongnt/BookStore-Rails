<section class="product-sec">
        <div class="container">
            <h1><%= @book.name %></h1>
            <div class="row">
                <div class="col-md-6 slider-sec">
                    <!-- main slider carousel -->
                    <div id="myCarousel" class="carousel slide">
                        <!-- main slider carousel items -->
                        <div class="carousel-inner">
                            <div class="active item carousel-item" data-slide-number="0">
                                <%= image_tag(@book.photos.first.url(:thumb)) %>
                            </div>
                            <% @book.photos[1..-1].each do |photo| %>
                              <div class="item carousel-item" data-slide-number=<%= @counter += 1 %>>
                                  <%= image_tag(photo.url(:thumb)) %>
                              </div>
                            <% end %>
                        </div>
                        <!-- main slider carousel nav controls -->
                        <ul class="carousel-indicators list-inline">
                            <li class="list-inline-item active">
                                <a id="carousel-selector-0" class="selected" data-slide-to="0" data-target="#myCarousel">
                                <%= image_tag(@book.photos.first.url(:thumb), style: 'height: 30px; width: 30px;') %>
                            </a>
                            </li>

                            <% @book.photos[1..-1].each do |photo| %>
                              <li class="list-inline-item">
                                <a id="carousel-selector-<%= @counter1 += 1 %>" data-slide-to=<%= @counter1 %> data-target="#myCarousel">
                                <%= image_tag(photo.url(:thumb), style: 'height: 30px; width: 30px;') %>
                                </a>
                              </li>
                            <% end %>
                        </ul>
                    </div>
                    <!--/main slider carousel-->
                </div>
                <div class="col-md-6 slider-content">
                    <p><%= @book.description %></p>
                    <ul>
                        <li>
                            <span class="name">Author</span><span class="clm">:</span>
                            <span class="price"><%= @book.author %></span>
                        </li>
                        <li>
                            <span class="name">Price</span><span class="clm">:</span>
                            <span class="price final"><%= @book.price %></span>
                        </li>
                    </ul>
                    <div class="btn-sec">
                        <%= form_for @order_item, url: add_to_cart_order_items_path, remote: true do |f| %>
                            <div class="input-group">
                                <%= f.number_field :quantity, value: 1, class: "form-control", min: 1 %>
                                <%= f.hidden_field :book_id, value: @book.id %>
                            </div>
                            <%= f.submit "Add to cart", class:"btn btn-primary", id:"order_item_quantity" %>
                        <% end %>
                        <%= form_for @order_item, url: add_to_cart_order_items_path, remote: true do |f| %>
                            <div class="input-group">
                                <%= f.hidden_field :book_id, value: @book.id %>
                                <%= f.hidden_field :quantity, value: 1 %>
                                <%= f.submit "Buy now", class:"btn btn-primary", id:"order_item_quantity" %>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </section>
