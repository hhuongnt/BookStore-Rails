<header>
    <div class="main-menu">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light">
                <a class="navbar-brand" href=<%= root_path %>><%= image_tag('logo.png') %></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto">
                        <li class="navbar-item">
                            <a href=<%= root_path %> class="nav-link">Home</a>
                        </li>
                        <li class="navbar-item">
                            <a href=<%= books_path %> class="nav-link">Shop</a>
                        </li>
                        <li class="navbar-item">
                            <a href="#" class="nav-link">About</a>
                        </li>
                        <li class="navbar-item">
                            <a href="#" class="nav-link">FAQ</a>
                        </li>
                        <% if user_signed_in? %>
                            <li class="navbar-item">
                                <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'logout-btn' %>
                            </li>
                        <% else %>
                            <li class="navbar-item">
                                <a href=<%= new_user_session_path %> class="nav-link">Login</a>
                            </li>
                        <% end %>
                    </ul>
                    <div class="cart my-2 my-lg-0">
                        <a href=<%= cart_path %>>
                            <span><i class="fa fa-shopping-cart" aria-hidden="true"></i></span>
                            <%# @current_order = current_order %>
                            <%# <span class="quantity"><%= @current_order.order_items.size ></span> %>
                        </a>
                    </div>
                </div>
            </nav>
        </div>
    </div>
    <div class="container">
        <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="search" placeholder="Search here..." aria-label="Search">
        </form>
    </div>
</header>
