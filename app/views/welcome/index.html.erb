    </div>
    <div class="row">
      <% @books.each do |book| %>
        <div class="col-lg-2 col-md-3 col-sm-4">
          <div class="item">
            <a href=<%= book_path(book.id) %>>
              <%= image_tag(book.photos.first.url(:thumb), alt: 'img') %>
            </a>
            <h3><a href=<%= book_path(book.id) %>><%= book.name.titleize %></a></h3>
            <h6><span class="price"><%= book.price %></span> / <a href=<%= cart_path %>>Buy Now</a></h6>
            <%= form_for @order_item, remote: true do |f| %>
              <div class="input-group">
                <%= f.number_field :quantity, value: 1, class: "form-control", min: 1 %>
                <div class="input-group-btn">
                  <%= f.hidden_field :book_id, value: book.id %>
                  <%= f.submit "Add to Cart", class:"btn btn-primary", id:"order_item_quantity" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="btn-sec">
        <a href=<%= books_path %> class="btn view">view all books</a>
    </div>
  </div>
</section>
